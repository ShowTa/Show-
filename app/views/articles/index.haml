- @articles.each do |article|
  %h2
    作成者
  .username
    = article.user.name
  %h5.title
    Title
  = article.title
  %h5.content
    = article.content

  .menu
    = link_to '詳細', article_path(article)
    = link_to '編集', edit_article_path(article)
    = link_to '削除', article_path(article), method: :DELETE if current_user.id == article.user_id

= link_to '新規投稿', new_article_path
= link_to '下書き一覧', draft_index_articles_path
